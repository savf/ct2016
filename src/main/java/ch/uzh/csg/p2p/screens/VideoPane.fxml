<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane styleClass="audioPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox id="btnWrapperVideo" fx:id="btnWrapperVideo" alignment="TOP_RIGHT" spacing="10.0" styleClass="btnWrapper" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="leaveChatBtn" mnemonicParsing="false" onAction="#leaveChatHandler" styleClass="btn" text="Leave Chat" />
                  <Button fx:id="addUserBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addUserHandler" text="Add user to chat">
                     <styleClass>
                        <String fx:value="greenBtn" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
            <HBox fx:id="videoUserWrapper" alignment="CENTER">
               <children>
                  <ImageView fx:id="videoUser1" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="videoUserClass" />
                  <ImageView id="meImageView" fx:id="meImageView" fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="meImageView" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin></HBox>
            <HBox alignment="CENTER" spacing="40.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="endVideoBtn" mnemonicParsing="false" onAction="#endVideoHandler" text="End video chat">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="redBtn" />
                     </styleClass>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="hideMyselfBtn" mnemonicParsing="false" onAction="#hideMyselfHandler" styleClass="btn" text="Hide myself" />
                  <Button fx:id="muteMicrophoneBtn" mnemonicParsing="false" onAction="#muteMicrophoneHandler" styleClass="btn" text="Mute Microphone" />
                  <Label id="microphoneLbl" fx:id="microphoneLbl" styleClass="imageLabel" />
                  <Button fx:id="muteVideoBtn" mnemonicParsing="false" onAction="#muteVideoHandler" styleClass="btn" text="Mute Camera" />
                  <Label id="cameraLbl" fx:id="cameraLbl" styleClass="imageLabel" />
               </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
