<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <children>
                  <TextArea id="chatText" fx:id="chatText" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <TextField id="messageText" fx:id="messageText" HBox.hgrow="ALWAYS" />
                  <Button id="sendMessage" fx:id="sendMessage" mnemonicParsing="false" onAction="#handleSendMessage" text="Send">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="messageSendBtn" />
                     </styleClass></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
