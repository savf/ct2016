<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane styleClass="audioPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox id="btnWrapperAudiot" fx:id="btnWrapperAudio" alignment="TOP_RIGHT" spacing="10.0" styleClass="btnWrapper" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="leaveChatBtn" mnemonicParsing="false" onAction="#leaveChatHandler" styleClass="btn" text="Leave Chat" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addUserBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addUserHandler" text="Add user to chat">
                     <styleClass>
                        <String fx:value="greenBtn" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
                  <Button fx:id="startVideoBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#startVideoHandler" styleClass="btn" text="Start video chat" />
               </children>
            </HBox>
            <HBox fx:id="audioUserWrapper" alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin></HBox>
            <HBox alignment="CENTER" spacing="40.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="endAudioBtn" mnemonicParsing="false" onAction="#endAudioHandler" text="End audio chat">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="redBtn" />
                     </styleClass>
                  </Button>
                  <Button fx:id="muteBtn" mnemonicParsing="false" onAction="#muteHandler" styleClass="btn" text="Mute Microphone" />
                  <Label id="microphoneLbl" fx:id="microphoneLbl" styleClass="imageLabel" />
               </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
